                     <Ellipse
                        Behaviors:MouseInteraction.Angle="{Binding Path=Angle,Mode=TwoWay}"
                        Behaviors:MouseInteraction.Offset="0,41"
                        Width="17"
                        Height="17"
                        Stroke="#CCC"
